age = 20 

if age < 4:
    print('You do not need to pay')
elif 4<age<18: 
    print('you need to pay 5 euros')
else: 
    print('Pay 10 euros')



if age < 4:
    price = 0 
elif age <18:
    price=5 
else:
    price = 10 

print("your admission fee is " + str(price))



